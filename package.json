    "type": "git",
    "url": "git+https://github.com/MaxR522/Boilerplate_express_ts.git"
  },
  "keywords": [
    "nodejs",
    "express.js",
    "typescript",
    "mongoose",
    "jwt",
    "mocha",
    "chai"
  ],
  "author": "Mario Randrianomearisoa <ranjamario@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MaxR522/Boilerplate_express_ts/issues"
  },
  "homepage": "https://github.com/MaxR522/Boilerplate_express_ts#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "mongoose": "^5.12.10",
    "nodemon": "^2.0.7",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^3.6.14",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.3.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^8.4.0",
    "prettier": "2.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
