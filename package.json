{
  "name": "boilerplate_express_ts",
  "version": "0.0.1",
  "description": "Boilerplate for express typescript",
  "main": "dist",
  "scripts": {
    "start": "node dist",
    "test": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register specs/**/*.spec.ts\"",
    "build": "tsc --project ./tsconfig.json",
    "dev": "tsc --project ./tsconfig.json --watch & nodemon dist"
  },
