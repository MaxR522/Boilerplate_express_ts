{
  "name": "boilerplate_express_ts",
  "version": "0.0.1",
  "description": "Boilerplate for express typescript",
  "main": "dist",
  "scripts": {
    "start": "NODE_ENV=production node dist",
    "test": "NODE_ENV=test nodemon --watch . --ext ts --exec \"mocha -r ts-node/register tests/**/*.test.ts\"",
    "build": "tsc --project ./tsconfig.json",
    "dev": "tsc --project ./tsconfig.json --watch & NODE_ENV=development nodemon dist",
    "lint": "eslint '*/**/*.ts' --quiet --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxR522/Boilerplate_express_ts.git"
  },
  "keywords": [
    "nodejs",
    "express.js",
    "typescript",
    "mongoose",
    "jwt",
    "mocha",
    "chai"
  ],
  "author": "Mario Randrianomearisoa <ranjamario@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MaxR522/Boilerplate_express_ts/issues"
  },
  "homepage": "https://github.com/MaxR522/Boilerplate_express_ts#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.10",
    "nodemon": "^2.0.7",
    "passport": "^0.4.1",
    "redis": "^3.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.18",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-flash": "^0.0.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^3.6.14",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.3.1",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.27.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "mocha": "^8.4.0",
    "prettier": "2.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
